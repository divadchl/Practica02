<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/lista_elementos_imvImagenApp"
            android:layout_margin="@dimen/margen_imagen_derecha"
            android:layout_width="56dp"
            android:layout_height="56dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="nombre app"
            android:id="@+id/lista_elementos_txvNombreApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="nombre desarrollador"
            android:id="@+id/lista_elementos_txvNombreDesarrollador"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="instalada"
            android:id="@+id/lista_elementos_txvIntalacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:id="@+id/lista_elementos_txvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>